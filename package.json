{
  "name": "@thesammykins/ptv-mcp",
  "version": "0.2.2",
  "description": "MCP server for Public Transport Victoria (PTV) Timetable API v3 - Data licensed under Creative Commons Attribution 3.0 Australia",
  "type": "module",
  "main": "dist/mcp/server.js",
  "bin": {
    "ptv-mcp": "dist/mcp/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thesammykins/ptv_mcp.git"
  },
  "bugs": {
    "url": "https://github.com/thesammykins/ptv_mcp/issues"
  },
  "homepage": "https://github.com/thesammykins/ptv_mcp",
  "scripts": {
    "dev": "bun --watch src/mcp/server.ts",
    "build": "bun build src/mcp/server.ts --outdir dist/mcp --target node && sed -i.bak '1s|#!/usr/bin/env bun|#!/usr/bin/env node|' dist/mcp/server.js && rm -f dist/mcp/server.js.bak",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "format": "prettier --write .",
    "lint": "tsc --noEmit",
    "mcp:dev": "bun run src/mcp/server.ts",
    "mcp:start": "bun run build && node dist/server.js",
    "mcp:validate": "bun run lint && bun test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "mcp",
    "ptv",
    "transport",
    "api",
    "melbourne",
    "victoria"
  ],
  "author": "Samantha Myers",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
